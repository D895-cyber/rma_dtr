# Database
DATABASE_URL="postgresql://username:password@localhost:5432/crm_db?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-min-32-characters"
JWT_EXPIRES_IN="7d"

# Server
PORT=5000
NODE_ENV="development"

# CORS
FRONTEND_URL="http://localhost:3000"

# Google Sheets sync (optional – CRM → Sheet)
# Create a Google Cloud project, enable Sheets API, create a service account, then share your sheet with the service account email.
GOOGLE_SHEET_ID=""
# Option 1: path to service account JSON key file
GOOGLE_APPLICATION_CREDENTIALS=""
# Option 2: raw JSON string (e.g. for serverless). Leave GOOGLE_APPLICATION_CREDENTIALS unset if using this.
# GOOGLE_SHEETS_CREDENTIALS_JSON='{"type":"service_account",...}'
