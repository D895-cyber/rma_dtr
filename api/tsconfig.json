{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./.vercel",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": false,
    "sourceMap": false,
    "noImplicitAny": false,
    "types": ["node"],
    "typeRoots": ["../node_modules/@types", "../backend/node_modules/@types"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}

