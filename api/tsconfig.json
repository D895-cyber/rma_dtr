{
  "extends": "../backend/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "typeRoots": ["../node_modules/@types", "../backend/node_modules/@types"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}

